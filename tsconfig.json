{
  "extends": "@teo-garcia/tsconfig-shared/tsconfig.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "./jest.setup.cjs"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ES2022",
    "paths": {
      "~/*": ["./app/*"]
    },
    "rootDirs": [".", "./.react-router/types"],
    "types": ["node", "vite/client"],
    "verbatimModuleSyntax": true
  }
}
